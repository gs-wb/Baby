<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lay_top_title"
        style="@style/top_lay"
        android:background="@color/main_bg">
        <com.yikang.health.widget.RecyclingImageView
            android:id="@+id/btn_top_left"
            style="@style/top_left_btn"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txt_top_title"
            android:textColor="@color/txt_dark"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            style="@style/top_text" />
        
        <CheckBox 
            android:id="@+id/iv_top_title_img"
            android:layout_width="@dimen/spacing_size_24"
            android:layout_height="@dimen/spacing_size_24"
            android:padding="@dimen/spacing_size_10"
            android:layout_marginLeft="@dimen/spacing_size_10"
            android:layout_toRightOf="@+id/txt_top_title"
            android:layout_centerVertical="true"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:visibility="invisible"/>
        
        <TextView
            android:id="@+id/tv_top_right"
            android:textColor="@color/txt_dark"
            style="@style/top_txt_right_btn"
            />
        <ImageView   
            android:id="@+id/iv_filter_btn"
			android:layout_height="fill_parent"
			android:layout_width="@dimen/spacing_size_44"
            android:layout_toLeftOf="@+id/tv_top_right"
            android:layout_marginRight="@dimen/spacing_size_5"
            android:padding="@dimen/spacing_size_8"
            android:visibility="invisible"/>
        
        <ImageView
            android:id="@+id/btn_top_right"
            style="@style/top_right_btn"/>
    </RelativeLayout>
     <View 
        android:layout_below="@+id/lay_top_title"
        android:layout_width="fill_parent" 
        android:layout_height="0dp"
        android:background="@drawable/top_title_shadow_line"/>
</RelativeLayout>
