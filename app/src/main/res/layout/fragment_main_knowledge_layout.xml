<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <View
        android:id="@+id/idr_StatusBar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/main_bg" >
    </View>

    <include layout="@layout/headtitle_plus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/lv_knowledge"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:cacheColorHint="@color/color_translate"
            android:background="@color/color_ffffff"
            android:dividerHeight="1sp"
            android:divider="@color/whell_gray"
            android:scrollbars="none" >
        </ListView>

        <GridView
            android:id="@+id/gv_knowledge"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/whell_gray"
            android:cacheColorHint="@color/color_translate"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:numColumns="2"
            android:scrollbars="none" >
        </GridView>
    </LinearLayout>

</LinearLayout>