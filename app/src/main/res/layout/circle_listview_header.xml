<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="240dip"
    android:clipToPadding="false"
    android:background="@drawable/me_top_bg"
    android:scrollY="24dip" 
    >

   <!--  <ImageView
        android:id="@+id/workcircle_top_bg_ImageView"
        android:layout_width="fill_parent"
        android:layout_height="240dip"
         /> -->

    <ImageView
        android:id="@+id/headPhotoImageView"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="160dip"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginTop="190dip"
        android:layout_toLeftOf="@id/headPhotoImageView"
        android:text="张三"
        android:textColor="@color/color_ffffff" />

    <!-- 左上角的圆圈转动图标 -->

    <ImageView
        android:id="@+id/circleprogress"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dip"
        android:scaleType="fitCenter"
        android:src="@drawable/progress" />

    <!-- 未读消息提醒 -->

    <TextView
        android:id="@+id/unReadMsgTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="5dip"
        android:background="#e7e7e7"
        android:gravity="center"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text="@string/unReadMsg"
        android:textColor="@color/color_000000"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>